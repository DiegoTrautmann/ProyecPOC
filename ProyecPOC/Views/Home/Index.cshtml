@model IEnumerable<ProyecPOC.Models.pymes>
@{
	ViewBag.Title = "Home Page";
}

<div class="jumbotron">
	<h1>Pymes Online Chile</h1>
	<p class="lead"><hr /></p>
	<p><hr /></p>
</div>

<table class="table">

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.nombre)
			</td>
			<td>

				<!-- Button trigger modal -->
				<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalCenter">
					Ver más <!--Aqui va el nombre del botón-->
				</button>
				<!-- Modal -->
				<div class="modal fade" id="ModalCenter" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
					<div class="modal-dialog modal-dialog-centered" role="document">
						<!--Aqui va el contenido de la ventana Modal-->
						<div class="modal-content">
							<div class="modal-header">
								<h5 class="modal-title" id="ModalLongTitle">@Html.DisplayFor(modelItem => item.nombre)</h5>
								<button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
									<span aria-hidden="true">&times;</span>
								</button>
							</div>
							<div class="modal-body">
								<h3>@Html.DisplayFor(modelItem => item.descripcion)</h3>
								<p>Direccion: @Html.DisplayFor(modelItem => item.dirección)</p>
								<p>Correo: @Html.DisplayFor(modelItem => item.correo)</p>
								<p>Sitio Web: @Html.DisplayFor(modelItem => item.sitioweb)</p>
								<p>Facebook: @Html.DisplayFor(modelItem => item.redsocial1)</p>
								<p>Instagram: @Html.DisplayFor(modelItem => item.redsocial2)</p>
							</div>
							<div class="modal-footer">
								<button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
							</div>
						</div>
					</div>
				</div>
			</td>
		</tr>
	}
</table>






